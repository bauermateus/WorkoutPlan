<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorkoutPlan" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="AlertStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered"/>

    <style name="Material.Button.Standard" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/marcellus</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Material.Button.Light" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Poppins.Bold" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Poppins.21sp.Bold" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Poppins.Light" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Poppins.10sp.Regular" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Poppins.12sp.Regular" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="App.Title" parent="">
        <item name="android:fontFamily">@font/marcellus</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Poppins.14sp.Regular" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Poppins.14sp.Medium" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Poppins.16sp.Bold" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Poppins.14sp.Bold" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Poppins.Semibold" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Material.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintEnabled">true</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutDrop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="endIconTint">@color/white</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4" parent="">
        <item name="cornerSize">4%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize6" parent="">
        <item name="cornerSize">6%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize12" parent="">
        <item name="cornerSize">12%</item>
    </style>

    <style name="Theme.WorkoutPlan" parent="Base.Theme.WorkoutPlan" />
</resources>